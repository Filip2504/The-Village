#include <iostream>
#include <cstdlib>
#include <windows.h>
#include <conio.h>
#include <math.h>
using namespace std;
//Global
int n = 20; //turns
int menu_main; //mode switch
int menu_game; //choose action
string city_name;
//VARIABLES
//materials
int wood = 10000;
int stone = 5000;
int gold = 1000;
int money = 100000;
//buildings
int House = 1;
int Timber_house = 1;
int Gold_mine = 1;
int Stone_mine = 1;
int Bank = 1;
//people
int Sminer = 10;
int Timber = 10;
int Gminer = 10;
int Banker = 10;
//params
int feed = 100;
int happyness = 100;
//FUNCTIONS
// build
void build_house();
void timber_house();
void build_Gmine();
void build_Smine();
void build_Bank();
void display();
//work
void gold_mine();
void wood_cut();
void stone_mine();
void banking();
//teach

//Other
void name();
void display();
void instruction();
void play();
int main()
{
    cout << "What do you want to do?\n";
    cout << "1. New game\n";
    cout << "2. Load game\n";
    cout << "3. Instruction\n";
    cout << "4. Exit\n";
    cin >> menu_main;
    system("cls");
    switch (menu_main)
    {
    case 1:
        name();
        cout << "City created\n";
        play();
    case 2:
        cout << "City loaded\n";
        play();
    case 3:
        instruction();
    case 4:
        cout << "Thank you for playing";
        exit(0);
    }

}
void display()
{

    cout << city_name << "\n";
    cout << "MATERIALS " << "\n";
    cout << "Wood: " << wood << "\n";
    cout << "Stone: " << stone << "\n";
    cout << "Gold: " << gold << "\n";
    cout << "Money: " << money << "\n";
    cout << "BUILDINGS: " << "\n";
    cout << "Houses: " << House << "\n";
    cout << "Timber houses: " << timber_house << "\n";
    cout << "Stone mines: " << Stone_mine << "\n";
    cout << "Gold mines: " << Gold_mine << "\n";
    cout << "Banks: " << Bank << "\n";
    cout << "PEOPLE: " << "\n";
    cout << "Gold_ Miners: " << Sminer << "\n";
    cout << "Timbers: " << Timber << "\n";
    cout << "Gold Miners: " << Gminer << "\n";
    cout << "Bankers: " << Banker << "\n";
    cout << "Happyness: " << happyness << "\n";
    cout << "Feed: " << feed << "\n";
}
void name()
{
    cout << "Select how many turns: \n";
    cin >> n;
    system("cls");
    cout << "Call your city:\n";
    cin >> city_name;
    system("cls");
}
void instruction()
{
    cout << "1. Build house" << "\n";
    cout << "2. Build timber house" << "\n";
    cout << "3. Build gold mine" << "\n";
    cout << "4. Build stone mine" << "\n";
    cout << "5. Build bank" << "\n";
    cout << "6. Mine gold" << "\n";
    cout << "7. Cut wood" << "\n";
    cout << "8. Mine stone" << "\n";
    cout << "9. Remake gold to coins" << "\n";
    /*cout << "" << "\n";
